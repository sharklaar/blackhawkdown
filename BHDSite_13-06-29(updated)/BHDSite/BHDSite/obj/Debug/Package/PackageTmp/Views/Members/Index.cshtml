@model BHDSite.Models.Member

@{    
    Layout = "~/Views/Shared/_LayoutNoFade.cshtml";
}
<script type="text/javascript">
    function changeClass(eleID) {
        removeOn(eleID);
        var currTabElem = document.getElementById(eleID);

        currTabElem.setAttribute("class", "on");
        currTabElem.setAttribute("className", "on");

        return false;
    }

    function getElementsByClassName(classname, node) {
        if (!node) node = document.getElementsByTagName("body")[0];
        var a = [];
        var re = new RegExp('\\b' + classname + '\\b');
        var els = node.getElementsByTagName("*");
        for (var i = 0, j = els.length; i < j; i++)
            if (re.test(els[i].className)) a.push(els[i]);
        return a;
    }

    function removeOn(id) {
        var elements = new Array();
        elements = getElementsByClassName('on');
        for (i in elements) {
            elements[i].className = elements[i].className.replace
      (/(?:^|\s)on(?!\S)/g, 'off');
        }
    }
</script>
