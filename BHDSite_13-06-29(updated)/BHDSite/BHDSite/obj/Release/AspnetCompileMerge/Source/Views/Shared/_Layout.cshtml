<!DOCTYPE html>
<html>
<head>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <title>Blackhawk Down - Rock!</title>
    <script type="text/javascript">
        $(document).ready(function ($) {
            $('#inner_wrapper').fadeIn(500);
            $('#header').fadeTo(750, 0.7, function () {
                $('#live_1').fadeTo(1000, 0.7);
                $('#black').fadeTo(1000, 1.0, function () {
                    $('#live_3').fadeTo(1000, 0.7);
                    $('#hawk').fadeTo(1000, 1.0, function () {
                        $('#live_2').fadeTo(1000, 0.7);
                        $('#down').fadeTo(1000, 1.0, function () {
                            $('#content').fadeIn(1500);
                            $('#content_background').fadeIn(750);
                            $('#black,#hawk,#down').fadeTo(1500, 0.6);
                        });
                    });
                });
            });


        });
    </script>
    <!--[if lte IE 8]>
            <link rel="stylesheet" href="css/ie.css" type="text/css" />
        <![endif]-->
</head>
<body>
    <div id="logindisplay">
        @Html.Partial("_LogOnPartial")
    </div>
    <div id="outer_wrapper" class="outer-wrapper-home">
        <div id="floater">
        </div>
        <div id="inner_wrapper" class="inner-wrapper-home">
            <div id="header">
                <img id="live_1" src="/Content/themes/base/images/live_1.jpg" /><img id="live_3"
                    src="/Content/themes/base/images/live_3.jpg" /><img id="live_2" src="/Content/themes/base/images/live_2.jpg" />
            </div>
            <div id="header_content">
                <div id="logo">
                    <img id="black" alt="Black" src="/Content/themes/base/images/black.png" />
                    <img id="hawk" alt="Hawk" src="/Content/themes/base/images/hawk.png" />
                    <img id="down" alt="Down" src="/Content/themes/base/images/down.png" />
                </div>
            </div>
            <div id="content_background" class="content-background-home">
                <div id="content" class="content-home">
                    <div id="nav">
                        <ul>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Gig Dates", "Index", "Gigs")</li>
                            <li>@Html.ActionLink("Band Members", "Index", "Members")</li>
                            <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
                        </ul>
                    </div>
                    <div id="main">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <br class="clear" />
        </div>
        <div id="footer">
            <div id="social-media">
                <a id="facebook" href="http://www.facebook.com/blackhawkdownuk" target="_blank">
                    <img alt="BHD on Facebook" src="/Content/themes/base/images/facebook.png">
                </a><a id="twitter" href="http://www.twitter.com/blackhawkdownuk" target="_blank">
                    <img alt="BHD on Twitter" src="/Content/themes/base/images/twitter.png">
                </a><a id="youtube" href="http://www.youtube.com/blackhawkdownuk" target="_blank">
                    <img alt="BHD on YouTube" src="/Content/themes/base/images/youtube.png">
                </a>
            </div>
        </div>
    </div>
</body>
</html>
