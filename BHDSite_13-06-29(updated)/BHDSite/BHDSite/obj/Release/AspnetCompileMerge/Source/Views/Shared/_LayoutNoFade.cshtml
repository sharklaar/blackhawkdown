<!DOCTYPE html>
<html>
<head>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Nova+Square|Pirata+One|Iceland|Nosifer|Metal+Mania|Iceberg' rel='stylesheet' type='text/css' />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <title>Blackhawk Down - Rock!</title>
</head>
<body>
@{ 
   var currentController = ViewContext.RouteData.Values["controller"] as string ?? "Home";
   var currentAction = ViewContext.RouteData.Values["action"] as string ?? "Index";
   var currentPage = (currentController + "-" + currentAction ).ToLower();
}
    <div id="logindisplay">
        @Html.Partial("_LogOnPartial")
    </div>
    <div id="background">
        <div id="outer">
           <div id="header-wrapper">
                <div id="header" class="no-fade">
                    <img id="live_1" class="no-fade" src="/Content/themes/base/images/live_1.jpg" />
                    <img id="live_3" class="no-fade" src="/Content/themes/base/images/live_3.jpg" />
                    <img id="live_2" class="no-fade" src="/Content/themes/base/images/live_2.jpg" />
                </div>
                <div id="logo">
                    <img id="black" class="no-fade" alt="Black" src="/Content/themes/base/images/black.png" />
                    <img id="hawk" class="no-fade" alt="Hawk" src="/Content/themes/base/images/hawk.png" />
                    <img id="down" class="no-fade" alt="Down" src="/Content/themes/base/images/down.png" />
                </div>
            </div>

            <div id="content-background">
                <div id="navigation">
                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = currentPage == "home-index" ? "current" : "" })</li>
                        <li>@Html.ActionLink("Gig Dates", "Index", "Gigs", null, new { @class = currentPage == "gigs-index" ? "current" : "" })</li>
                        <li>@Html.ActionLink("About", "Index", "Members", null, new { @class = currentPage == "members-index" ? "current" : "" })</li>
                        <li>@Html.ActionLink("Contact Us", "Index", "Contact", null, new { @class = currentPage == "contact-index" ? "current" : "" })</li>
                    </ul>
                </div>

                <div id="main">
                    @RenderBody()
                    <div id="social-media" class="clearfix">
                            <a id="facebook" href="http://www.facebook.com/blackhawkdownuk" target="_blank">
                                <img alt="BHD on Facebook" src="/Content/themes/base/images/facebook.png">
                            </a><a id="twitter" href="http://www.twitter.com/blackhawkdownuk" target="_blank">
                                <img alt="BHD on Twitter" src="/Content/themes/base/images/twitter.png">
                            </a><a id="youtube" href="http://www.youtube.com/blackhawkdownuk" target="_blank">
                                <img alt="BHD on YouTube" src="/Content/themes/base/images/youtube.png">
                            </a>
                            <br class="clearfix" />
                    </div>                
                </div>
            </div>
        </div>
    </div>
</body>
                
                    
               
   