@{
    ViewBag.Title = "UK Heavy Rock Band | BlackHawkDown";
    ViewBag.Description = "BlackHawkDown - A UK heavy rock band with music like you've never heard before";
    ViewBag.Keywords = "blackhawkdown, uk heavy rock, heavy rock, rock, grunge, midlands, unique, metal, alternative metal, seattle grunge, band, bhd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BhdResponsiveSite.Models.GigDetail

<div class="home-page page-block">
    <h1>Check out our latest video, FREEMAN, here!</h1>

    <div class="video-block">
        <div id="yt-wrapper" class="full-width-video-container main-video promo">
        </div>
    </div>

    <div class="main-promo-wrapper">
        <div class="main-promo">
            <div class="promo">
                <a href="@Url.Action("Music", "Home")" class="promo-link music odd" onclick="_gaq.push(['_trackEvent', 'Home Links', 'Click', 'Music Page'])">
                    <div class="promo-img"></div>
                    <div class="promo-text">
                        <h2>Our Music</h2>
                        <p class="main-promo-text">CLICK HERE <br /> to watch a collection of live music and recorded videos</p>
                    </div>
                </a>
            </div>
        </div>

        <div class="main-promo">
            <div class="promo">
                <a href="@Url.Action("Gigs", "Home")" class="promo-link gigs even" onclick="_gaq.push(['_trackEvent', 'Home Links', 'Click', 'Gigs Page'])">
                    <div class="promo-img"></div>
                    <div class="promo-text">
                        <div class="promo-text"><h3>Our nExt gig!</h3><p>@Model.Venue<br />@Model.Location<br />@Model.GigDate.ToString("dd-MM-yyyy")</p></div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <ul class="promo-boxes">


        <li class="promo">
            <a href="@Url.Action("About", "Home")" class="promo-link about odd">
                <div class="promo-img"></div>
                <div class="promo-text"><h3>About Us</h3> Head to the band page to see who's who.</div>
            </a>
        </li>
    </ul>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('<iframe width="460" height="234" src="https://www.youtube.com/embed/gpoXAWDQd84?rel=0" frameborder="0" allowfullscreen></iframe>').appendTo('#yt-wrapper');
        });

        function share_click(width, height, url) {
            var leftPosition, topPosition;
            //Allow for borders.
            leftPosition = (window.screen.width / 2) - ((width / 2) + 10);
            //Allow for title and status bars.
            topPosition = (window.screen.height / 2) - ((height / 2) + 50);
            var windowFeatures = "status=no,height=" + height + ",width=" + width + ",resizable=yes,left=" + leftPosition + ",top=" + topPosition + ",screenX=" + leftPosition + ",screenY=" + topPosition + ",toolbar=no,menubar=no,scrollbars=no,location=no,directories=no";
            u = location.href;
            t = document.title;
            window.open(url, 'sharer', windowFeatures);
            return false;
        }
    </script>
}
