@{
    ViewBag.Title = "Music Videos of Our Songs | BlackHawkDown";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="videos-page">
    <li class="heading">
        <h1>Our Music</h1>
    </li>

    <li class="main-video promo" data-bind="with: currentVideo()">           
        <iframe data-bind="attr: { src: embedCode() }" frameborder="0" allowfullscreen="" scrolling="no"></iframe>    
    </li>

    <li class="thumbnails">
        <h3 class="mobile-only">Tap a video to play</h3>
        <h3 class="desktop-only">click a video to play</h3>
        <ul class="thumb-list" data-bind="foreach: videos">
            <li class="thumbnail promo" data-bind="click: $root.playVideo, css: {current: isCurrent} ">
                <img height="150" width="200" data-bind="attr:{src: image}" />
                <p data-bind="html: title"></p>
            </li>
        </ul>
    </li>
</ul>
@section Scripts {
    @Scripts.Render("~/bundles/musicpage");
}