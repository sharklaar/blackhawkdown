@using BhdResponsiveSite.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="google-site-verification" content="MowVZN16pe6WGv5ctqjCcLR0zLOkdFoex0PWBxAo-88" />

    @if (string.IsNullOrEmpty(ViewBag.OgImage))
    {
        <meta property="og:image" content="~/Content/images/band.jpg" />
    }
    else
    {
        <meta property="og:image" content="@ViewBag.OgImage" />
    }
    @if (string.IsNullOrEmpty(ViewBag.OgSiteName))
    {
        <meta property="og:site_name" content="BlackHawkDown UK Official Website" />
    }
    else
    {
        <meta property="og:site_name" content="@ViewBag.OgSiteName" />
    }
    <meta property="og:title" content="BlackHawkDown UK Official Website" />
    <meta property="og:url" content="@Request.Url" />
    <meta property="og:type" content="website" />
    <link rel="canonical" href="http://www.blackhawkdown.org.uk/" />
    <link rel="icon" href="~/Content/images/icons/favicon-16.png" sizes="16x16">
    <link rel="icon" href="~/Content/images/icons/favicon-32.png" sizes="32x32">
    <link rel="icon" href="~/Content/images/icons/favicon-48.png" sizes="48x48">
    <link rel="icon" href="~/Content/images/icons/favicon-64.png" sizes="64x64">
    <link rel="icon" href="~/Content/images/icons/favicon-128.png" sizes="128x128">
</head>


<body>

<ul>
    <li>
        <main class="full-height">
            <header>
                <img src="/Content/images/bhd-logo.png"/>
            </header>
            @if (Request.Cookies["bhd_subscribe"] == null)
            {

                <li id="email" class="main-section clearfix">
                    <!-- Begin MailChimp Signup Form -->
                    <link href="//cdn-images.mailchimp.com/embedcode/horizontal-slim-10_7.css" rel="stylesheet" type="text/css">

                    <div id="mc_embed_signup">
                        <form action="//blackhawkdown.us16.list-manage.com/subscribe/post?u=9076d68734334d09e6c42262d&amp;id=1fc6e722b2" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div id="mc_embed_signup_scroll">
                                <label for="mce-EMAIL">Subscribe to our newsletter and we'll send you a free track!</label>
                                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_9076d68734334d09e6c42262d_1fc6e722b2" tabindex="-1" value="">
                                </div>
                                <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
            }

            @RenderBody()

            <footer>
                @Html.Partial("_footer")
            </footer>
        </main>
    </li>
</ul>




<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/knockout/2.3.0/knockout-min.js" type="text/javascript"></script>
