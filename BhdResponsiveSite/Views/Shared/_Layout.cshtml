@using BhdResponsiveSite.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="google-site-verification" content="MowVZN16pe6WGv5ctqjCcLR0zLOkdFoex0PWBxAo-88" />
    @if (string.IsNullOrEmpty(ViewBag.OgImage))
    {
    <meta property="og:image" content="~/Content/images/band.jpg" />
    }
    else
    {
    <meta property="og:image" content="@ViewBag.OgImage" />
    }
    @if (string.IsNullOrEmpty(ViewBag.OgSiteName))
    {
    <meta property="og:site_name" content="BlackHawkDown UK Official Website" />
    }
    else
    {
    <meta property="og:site_name" content="@ViewBag.OgSiteName" />
    }
    <meta property="og:title" content="BlackHawkDown UK Official Website" />
    <meta property="og:url" content="@Request.Url" />
    <meta property="og:type" content="website" />
    <link rel="canonical" href="http://www.blackhawkdown.org.uk/" />
    <link rel="icon" href="~/Content/images/icons/favicon-16.png" sizes="16x16">
    <link rel="icon" href="~/Content/images/icons/favicon-32.png" sizes="32x32">
    <link rel="icon" href="~/Content/images/icons/favicon-48.png" sizes="48x48">
    <link rel="icon" href="~/Content/images/icons/favicon-64.png" sizes="64x64">
    <link rel="icon" href="~/Content/images/icons/favicon-128.png" sizes="128x128">
</head>
<body>
    <ul class="page">
        <li id="header" class="main-section">
            @Html.Partial("_header", new ViewDataDictionary(new AccountModel()))
        </li>

        @if (Request.Cookies["bhd_subscribe"] == null)
        {

            <li id="email" class="main-section clearfix">
                <!-- Begin MailChimp Signup Form -->
                <link href="//cdn-images.mailchimp.com/embedcode/horizontal-slim-10_7.css" rel="stylesheet" type="text/css">
            
                <div id="mc_embed_signup">
                    <form action="//blackhawkdown.us16.list-manage.com/subscribe/post?u=9076d68734334d09e6c42262d&amp;id=1fc6e722b2" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                        <div id="mc_embed_signup_scroll">
                            <label for="mce-EMAIL">Subscribe to our newsletter and we'll send you a free track!</label>
                            <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_9076d68734334d09e6c42262d_1fc6e722b2" tabindex="-1" value=""></div>
                            <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
                        </div>
                    </form>
                </div>

                <!--End mc_embed_signup-->
            </li>
        }


        <li id="main-content" class="main-section">
            @RenderBody()
        </li>

        <li id="footer" class="main-section">
            @Html.Partial("_footer")
        </li>
    </ul>




    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/knockout/2.3.0/knockout-min.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/shared")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-39424304-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

        $(document).ready(function () {
            $('#globalNavButton').click(function () {
                var nav = $('#navigation');
                var navButton = $('#globalNavButton');
                if (!nav.hasClass('open')) {
                    nav.slideDown();
                    nav.addClass('open');
                    navButton.addClass('open');

                } else {
                    nav.slideUp();
                    nav.removeClass('open');
                    navButton.removeClass('open');
                }
            });
        });
    </script>
</body>
</html>
