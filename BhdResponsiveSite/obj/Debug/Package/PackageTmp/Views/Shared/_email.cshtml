@model BhdResponsiveSite.Models.EmailOnlyModel

<div class="email-section clearfix">
    <p>Enter your email address here to subscribe to our newsletter and receive <strong>3 free tracks!</strong> You'll receive a link to download three BlackHawkDown tracks by email in a moment...</p>
</div>
@using (Html.BeginForm())
{
    <div class="email-box">
        @Html.ValidationSummary(true) 
        <div class="enter-email">
            @Html.TextBoxFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <p>
            <input type="submit" value="Send" class="submit-email" />
        </p>
    </div>
}