@model BhdResponsiveSite.Models.AccountModel

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<h2>Sign up for a BlackHawkDown account</h2>
 @using (Html.BeginForm("CreateAccount", "Account", FormMethod.Post))
 {
     <div class="signup-field">
         @Html.LabelFor(m => m.Username)
         @Html.TextBoxFor(m => m.Username, new { @Value = "Username" })
         @Html.ValidationMessageFor(m => m.Username)
     </div>
     <div class="signup-field">
         @Html.LabelFor(m => m.FirstName)
         @Html.TextBoxFor(m => m.FirstName, new { @Value = "First name" })
         @Html.ValidationMessageFor(m => m.FirstName)
     </div>
     <div class="signup-field">
         @Html.LabelFor(m => m.LastName)
         @Html.TextBoxFor(m => m.LastName, new { @Value = "Last name" })
         @Html.ValidationMessageFor(m => m.LastName)
     </div>
     <div class="signup-field">
         @Html.LabelFor(m => m.Email)
         @Html.TextBoxFor(m => m.Email, new { @Value = "Email address" })
         @Html.ValidationMessageFor(m => m.Email)
     </div>
     <div class="signup-field">
         @Html.LabelFor(m => m.Password)
         @Html.PasswordFor(m => m.Password, new { @Value = "Password" })
         @Html.ValidationMessageFor(m => m.Password)
     </div>
         <div class="signup-field">
         @Html.LabelFor(m => m.ConfirmPassword)
         @Html.PasswordFor(m => m.ConfirmPassword, new { @Value = "Confirm password" })
         @Html.ValidationMessageFor(m => m.ConfirmPassword)
     </div>

     <input type="submit" value="Sign up now" class="submit-button" />
     
 }

<script type="text/javascript">
    $("input[name=Username], input[name=Password], input[name=FirstName], input[name=LastName], input[name=Email], input[name=ConfirmPassword]").focus(function () {
        var defaultText = $(this).val();
        if (defaultText === "Username" || defaultText === "Password" || defaultText === "First name" || defaultText === "Last name" || defaultText === "Email address" || defaultText === "Confirm password") {
            $(this).val('');
        }
    });
</script>